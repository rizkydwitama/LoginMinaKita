<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/security"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/security"
        android:layout_marginTop="56dp"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="62dp"
        android:layout_marginRight="98dp" />

    <TextView
        android:id="@+id/gantipassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/ganti_password"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="587dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="145dp" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle2"
        android:layout_marginTop="274dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="242dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/link"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="318dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="286dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/poppins"
        android:textColor="#000000"
        android:textSize="12sp"
        android:text="@string/masukkan_password_yang_benar"
        android:layout_marginRight="58dp"
        android:layout_marginLeft="30dp"
        android:gravity="center_horizontal" />

    <Button
        android:id="@+id/buttonok"
        android:layout_width="51.68dp"
        android:layout_height="35dp"
        android:layout_marginStart="283.37dp"
        android:layout_marginLeft="283.37dp"
        android:layout_marginTop="363dp"
        android:layout_marginEnd="24.95dp"
        android:layout_marginRight="24.95dp"
        android:layout_marginBottom="253dp"
        android:fontFamily="@font/poppins"
        android:gravity="center_horizontal"
        android:text="@string/ok"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:backgroundTint="#2547E0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chipLanjut"
        android:layout_width="328dp"
        android:layout_height="55.15dp"
        app:chipBackgroundColor="#2547E0"
        app:chipCornerRadius="25dp"
        android:layout_marginTop="416dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="184dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/lanjut"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:fontFamily="@font/poppins"
        android:textSize="12sp"
        android:textColor="#FFFFFF"
        android:clickable="true"
        android:focusable="true" />

</androidx.constraintlayout.widget.ConstraintLayout>